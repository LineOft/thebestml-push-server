{
    "version": 2,
    "functions": {
        "api/*.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" },
                { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, OPTIONS" },
                { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-File-Name, X-Content-Type, X-Folder" }
            ]
        }
    ]
}
